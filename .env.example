# ShelfLife Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ============================================================================
# LLM Provider Configuration
# ============================================================================
# Choose your LLM provider: 'anthropic' or 'ollama'
LLM_PROVIDER=anthropic

# ----------------------------------------------------------------------------
# Anthropic Configuration (if using Anthropic)
# ----------------------------------------------------------------------------
# Get your API key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# ----------------------------------------------------------------------------
# Ollama Configuration (if using Ollama for local/free LLM)
# ----------------------------------------------------------------------------
# Download Ollama at: https://ollama.ai/
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1

# ============================================================================
# External API Configuration
# ============================================================================
# Google Books API Key (optional, but recommended for better metadata)
# Get your API key at: https://console.cloud.google.com/apis/credentials
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here

# ============================================================================
# Application Settings
# ============================================================================
# Database path
DB_PATH=data/database.db

# Cache expiry in seconds (default: 86400 = 24 hours)
CACHE_EXPIRY=86400

# Image processing settings
MAX_IMAGE_SIZE=800
MAX_FILE_SIZE=5242880

# ============================================================================
# Debug and Logging
# ============================================================================
# Enable debug mode (true/false)
DEBUG_MODE=true

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Skip configuration validation (not recommended)
# SKIP_CONFIG_VALIDATION=false
